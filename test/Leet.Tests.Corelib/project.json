{
  "version": "0.0.2-*",
  "title": "Leet.Tests.Corelib",
  "description": "A library package that contains tests for Leet.Corelib library package.",
  "copyright": "Copyright (c) Leet. All rights reserved. Licensed under the MIT License.",
  "language": "en-US",
  "authors": [ "Hubert Bukowski" ],

  "packOptions": {
    "owners": [ "Leet" ],
    "projectUrl": "https://github.com/Leet/Corelib",
    "licenseUrl": "https://raw.githubusercontent.com/Leet/Corelib/v0.0.1/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "git://github.com/Leet/Corelib"
    }
  },

  "buildOptions": {
    "keyFile": "../../tools/Leet.snk",
    "xmlDoc": true,
    "additionalArguments": [ "/ruleset:../../CodeAnalysis.ruleset", "/additionalfile:../../StyleCop.json" ]
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "warningsAsErrors": false
      }
    },
    "Release": {
      "buildOptions": {
        "warningsAsErrors": true
      }
    }
  },

  "frameworks": {
    "net451": {
      "imports": [
        "netstandard1.0",
        "netstandard1.1"
      ]
    }
  },

  "dependencies": {
    "Leet.Corelib": "0.0.2-*",
    "xunit": "2.2.0-*",
    "NSubstitute": "2.0.0-*",
    "AutoFixture": "3.50.1",
    "AutoFixture.AutoNSubstitute": "3.50.1",
    "AutoFixture.Xunit2": "3.50.1",
    "dotnet-test-xunit": "2.2.0-*",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "testRunner": "xunit"
}